{
  "rules": {
    "farms": {
      "$farmId": {
        ".read": "auth != null && root.child('farms').child($farmId).child('allowedUsers').child(auth.uid).val() === true",
        ".write": "auth != null && root.child('farms').child($farmId).child('allowedUsers').child(auth.uid).val() === true",
        "allowedUsers": {
          "$uid": {
            ".read": "auth != null && root.child('farms').child($farmId).child('allowedUsers').child(auth.uid).val() === true",
            ".write": "auth != null && root.child('farms').child($farmId).child('allowedUsers').child(auth.uid).val() === true"
          }
        }
      }
    },
    "userDevices": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}
